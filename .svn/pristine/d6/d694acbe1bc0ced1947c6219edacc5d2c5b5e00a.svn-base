function numberComma(e){
	console.log(e.value);
	var len;
	var str = e.value;
	str = str.replace(/,/g,'');
	var str1 = '';
	
	len = str.length;
	
	if(len>3) {
	  for(var i=0;len-i-3>0;i+=3) {
	    str1 = ','+str.substring(len-3-i,len-i)+str1;
	  }
	  str1 = str.substring(0,len-i)+str1;
	  e.value = str1;
	}
}

